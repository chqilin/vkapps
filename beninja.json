{
    "name": "vkapps",
    "version": "1.3.6",

    "vars": {
        "glfwsdk": "/Users/qilin/Documents/SDK/glfw-3.3.4"
    },
    
    "targets": [{
        "name":"001-glfw",
        "type": "executable",

        "defines": [
            "_WINDOW_WIDTH=800",
            "_WINDOW_HEIGHT=600",
            "_WINDOW_TITLE=\"glfw\""
        ],

        "includes": [
            "-I${glfwsdk}/include"
        ],

        "libraries": [
            "-L${glfwsdk}/lib-universal",
            "-lglfw.3",
            "-lvulkan",
            "-lvulkan.1"
        ],

        "sources": [
            "./001-glfw/**.cc"
        ],

        "copies": [
            "${glfwsdk}/lib-universal/libglfw.3.dylib"
        ],

        "runtimes": [
            "@executable_path"
        ]
    }]
}